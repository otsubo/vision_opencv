<launch>
  <arg name="INPUT_IMAGE" default="/camera/rgb/image_raw"/>
  <arg name="INPUT_CLOUD" default="/camera/depth_registered/points"/>
  <arg name="INPUT_CAMERA_INFO" default="/camera/rgb/camera_info"/>
  <arg name="manager" default="stem_detect_manager" />
  <arg name="create_manager" default="true" />

  <node if="$(arg create_manager)"
        pkg="nodelet" type="nodelet" name="$(arg manager)"
        args="manager" output="screen"/>
  <node pkg="jsk_perception" type="rgb_decomposer" name="rgb_decomposer">
    <remap from="~input" to="$(arg INPUT_IMAGE)" />
  </node>

  <node pkg="opencv_apps" type="fback_flow" name="fback_flow">
    <remap from="image" to="$(arg INPUT_IMAGE)" />
  </node>

  <node pkg="jsk_perception" type="multiply_mask_image" name="multiply_mask_image">
    <remap from="~input/src1" to="rgb_decomposer/output/filtered_image" />
    <remap from="~input/src2" to="fback_flow/norm_image" />
    <rosparam>
      approximate_sync: true
    </rosparam>
  </node>

  <node pkg="jsk_perception" type="dilate_mask_image" name="dilate_mask_image">
    <remap from="~input" to="multiply_mask_image/output"/>
    <rosparam>
      size: 3
      iterations: 2
    </rosparam>
  </node>

  <node pkg="jsk_pcl_ros_utils" type="mask_image_to_point_indices" name="mask_image_to_point_indices">
    <remap from="~input" to="dilate_mask_image/output" />
    <rosparam>
      size: 3
      iterations: 2
    </rosparam>
  </node>

  <node pkg="jsk_pcl_ros" type="extract_indices" name="extract_indices">
    <remap from="~input" to="$(arg INPUT_CLOUD)" />
    <remap from="~indices" to="mask_image_to_point_indices/output" />
    <rosparam>
      approximate_sync: true
      max_queue_size: 50
    </rosparam>
  </node>

    <node pkg="nodelet" type="nodelet" name="euclidean_clustering"
          args="load jsk_pcl/EuclideanClustering $(arg manager)" output="screen">
      <remap from="~input" to="extract_indices/output" />
      <remap from="~indices" to="mask_image_to_point_indices/output" />
      <rosparam>
        tolerance: 0.005
        min_size: 500
      </rosparam>
    </node>

    <node pkg="jsk_pcl_ros" type="cluster_point_indices_decomposer" name="cluster_point_indices_decomposer">
      <remap from="~input" to="extract_indices/output" />
      <remap from="~target" to="euclidean_clustering/output" />
    </node>

</launch>
